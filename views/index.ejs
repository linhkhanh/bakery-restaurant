<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8" />
    <title>Index of Cakes</title>
    <link rel="stylesheet" href="/show.css" />
</head>

<body>
    <nav>
        <div class="back">
            <a href="/">HOME</a>
        </div>
        <h1>Biscoff Bakery</h1>
    </nav>
    <h2>All Cakes of Biscoff Bakery</h2>
    <div class="container">
        <% bakedGoods.forEach((item, index) => { %>
        <div class="item">
            <a href="/bakedgoods/<%=index%>"> <%= item.name %></a>
            <!--  ADD DELETE FORM HERE-->
            <form action="/bakedgoods/<%= index %>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE"/>
                <a href="/bakedgoods/<%=index%>/edit" class="edit">EDIT</a>
            </form>
        </div>
        <% }) %>
    </div>

</body>

</html>